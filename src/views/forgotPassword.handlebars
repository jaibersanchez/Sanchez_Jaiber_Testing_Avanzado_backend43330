<section class="d-flex justify-content-center align-items-center h-100" style="background-color: #ffff">
    <div class="w-auto h-auto bg-light d-flex flex-column align-items-center justify-content-between rounded border border-secondary p-3">
        <h1 class="my-4 ">Reset password</h1>

        <form class="w-100 px-4 mb-5 mt-2" id='cookieForm' action='/api/session/forgotPassword' method="POST">
            <p>We will send you a link to reset your password to the registered email</p>
            <div class="form-group mb-2">
                <label for="username">Please enter your email</label>
                <input class="form-control" type="email" name="email" required placeholder="example@example">
            </div>
            <button type="submit" class="btn btn-warning mt-3 w-100">Send Mail</button>
        </form>
        
    </div>
    
</section>