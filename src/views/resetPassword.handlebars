<section class="d-flex justify-content-center align-items-center h-100" style="background-color: #ffff">
    <div class="w-auto h-auto bg-light d-flex flex-column align-items-center justify-content-between rounded border border-secondary p-3">
        <h1 class="my-4 ">Reset password</h1>

        <form class="w-100 px-4 mb-5 mt-2" id='cookieForm' action='/api/session/resetPassword?token={{token}}' method="POST">
            <p>Please enter you new password, this should not be the same as the previous one</p>
            <div class="form-group mb-2">
                <label for="username">New Password</label>
                <input id="passwordField" class="form-control" type="password" name="password" required placeholder="*******">
            </div>
            <div class="checkbox">
                <input type="checkbox" id="showPasswordCheckbox" onchange="showPass()">
                <span class="label ">Show password</span>
            </div>
            <button type="submit" class="btn btn-warning mt-3 w-100">Change password</button>
        </form>      
    </div>
</section>

<script src="/static/js/showPass.js"></script>